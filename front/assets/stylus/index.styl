@import 'variables'
body
    font-family $family-sans-serif
ul,
ol
    padding 0
    margin 0
    li
        list-style none
a
    text-decoration none
    &:hover,
    &:active,
    &:focus
        text-decoration none
        
h1,h2,h3,h4,h5,h6
    margin 0
    
.container
    width 1040px
    padding 0
.small-container
    width 800px
    margin auto
    
.button
    position relative
    background-color $primary
    color $secondary
    border 0
    height 40px
    display flex
    align-items center
    justify-content center
    padding 5px 20px 4px
    font-size 12px
    font-weight 600
    letter-spacing 2px
    text-transform uppercase
    outline none
    overflow hidden
    &:after
        content ""
        position absolute
        left -100%
        top 0
        width 100%
        height 100%
        background-color rgba(0, 0, 0, .1)
        z-index 2
        transition all .35s ease-in
    &:hover
        &:after
            left 0
    &.no-background
        background-color transparent
        color #FFF
        padding 0
        &:after
            display none
    &.has-icon
        .fa,
        img
            display block
            margin-right 12px
    &.has-ex-w
        width 160px
    &.white-button
        background-color #FFF

.form-control
    &.has-custom
        height 40px
        border-radius 0
        border 2px solid transparent
        box-shadow none
        color $secondary
        text-transform uppercase
        font-size 12px
        font-weight 600
        letter-spacing 2px
        background-color rgba($secondary, .03)
        padding-left 20px
        transition all .25s ease-in
        &::placeholder
            color $secondary
        &:focus
            border-color $secondary
textarea
    &.no-resize
        resize none
.is-absolute
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 1
.checking
    margin-bottom 20px
    .check
        position absolute
        left -9999px
        &:not(:checked),
        &:checked
            + label
                &:before
                    content: ""
                    border 2px solid #c7cace
                    border-radius 3px
                    background-color #FFF
                    position absolute
                    top 4px
                    width 16px
                    height 16px
                    left 0

                &:after
                    content "\f00c"
                    left 2.5px
                    font-family "FontAwesome"
                    color $secondary
                    width 12px
                    height 12px
                    position absolute
                    top 6px
                    transition all .2s ease
                    transform scale(0)
                    font-size 10px
                    display flex
                    align-items center
                    justify-content center

        &:checked
            + label
                &:before
                    border-width 2px
                    border-color $secondary
                &:after
                    transform scale(1)
    label
        font-size 14px
        font-weight 400
        color #616d82
        opacity .8
        margin-bottom 0
        position relative
        padding-left 30px
        cursor pointer
        display flex
        align-items flex-end
.form-status
    display grid
    width 100px
    grid-template-columns repeat(3, 1fr)
    grid-column-gap 5px
    margin 0 0 20px auto
    li
        background-color #ebeef2
        height 3px
        border-radius 10px
.simple-heading
    margin-bottom 60px
    h2
        color #384457
        font-size 28px
        font-weight 600
        margin-bottom 20px
    p
        font-size 18px
        color #616d82
        margin-bottom 20px
        line-height 1.56
        &.small-p
            font-size 14px
            color #616d82
            opacity .8
        &:last-child
            margin-bottom 0